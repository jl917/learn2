.productInfo{
        padding:30px 20px 20px
        h2{
            margin:0 0 20px;
            color:rgba(51, 51, 51, 1)
            font-size:20px;
            letter-spacing: -0.4px
            line-height: 24px;
            span{
                display: block
                font-size:14px;
                line-height:20px;
                color:rgba(51, 51, 51, 0.7)   
            }
        }
        .txt_contents{
            font-size:14px;
            letter-spacing: -0.4px
            line-height: 24px
            color:rgba(51, 51, 51, 1)
            margin-bottom:0;
        }
        p{
            font-size:14px;
            letter-spacing: -0.4px
            line-height: 24px
            color:rgba(51, 51, 51, 1)
            margin-bottom:0;
        }
        .btn_area{
            display: flex
            justify-content: flex-end
            .btn{
                flex:1
                a{
                    text-decoration: none;
                    width:74px;
                    padding:7px 0 ;
                    line-height: 14px;
                    color:rgba(51, 51, 51, 1)
                    font-size:12px;
                    display: inline-block;
                    border-radius:20px;
                    border:1px solid rgba(0, 0, 0, 0.2)
                    text-align:center
                    vertical-align: top
                }
            }

        }

        .info{
            margin-top:-10px;
            li{
                position:relative
                height:20px
                line-height:20px;
                margin-top:8px;
                color:#333;
                font-size:14px;
                padding-left:100px;
                &:first-child{
                    margin-top:0
                }
                em{
                    position: absolute;
                    top:0;
                    left:0;
                    color:rgba(51, 51, 51, 0.7)
                }
            }
        }
    }
.productInfo+.productInfo{
   border-top:1px solid rgba(0,0,0,.1)
}  